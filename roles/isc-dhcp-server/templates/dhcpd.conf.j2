option domain-name "home";
option domain-name-servers {{ keepalived["notify"]["home"]["address"] }};

default-lease-time 600;
max-lease-time 7200;

ddns-update-style none;

authoritative;

subnet {{ dhcpd["home"]["subnet"] }} netmask {{ dhcpd["home"]["netmask"] }} {

  option routers {{ keepalived["notify"]["home"]["address"] }};
  range {{ dhcpd["home"]["range"] }};

  on commit {
    execute("/etc/dhcp/notify.sh", "schedule");
  }

  on release {
    execute("/etc/dhcp/notify.sh", "schedule");
  }

}
