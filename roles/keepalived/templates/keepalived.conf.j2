global_defs {

    enable_script_security
    script_user root root

}

vrrp_instance gateway {

    notify_master "/etc/keepalived/blackhole.bash return"
    notify_backup "/etc/keepalived/blackhole.bash take"
    notify_fault "/etc/keepalived/blackhole.bash take"
    notify_stop "/etc/keepalived/blackhole.bash take"
    interface skynet
    virtual_router_id 1

    authentication {

        auth_type PASS
        auth_pass skynet

    }

    virtual_ipaddress {

        192.168.128.1/17 dev skynet
        192.168.123.1/24 dev home no_track
        5.130.78.89/24 dev novotelecom no_track

    }

    virtual_routes {

        0.0.0.0/0 via 5.130.78.1 dev novotelecom metric 75 no_track

    }

}
