global_defs {

    enable_script_security
    script_user root root

}

vrrp_instance gateway {

    notify_master "/bin/bash -c 'ip link set dev novotelecom nomaster; ip link set dev home nomaster'"
    notify_backup "/bin/bash -c 'ip link set dev novotelecom master blackhole; ip link set dev home master blackhole'"
    notify_fault "/bin/bash -c 'ip link set dev novotelecom master blackhole; ip link set dev home master blackhole'"
    notify_stop "/bin/bash -c 'ip link set dev novotelecom master blackhole; ip link set dev home master blackhole'"
    interface skynet
    virtual_router_id 1

    authentication {

        auth_type PASS
        auth_pass skynet

    }

    virtual_ipaddress {

        192.168.128.1/17 dev skynet
        192.168.123.1/24 dev home no_track
        5.130.78.89/24 dev novotelecom no_track

    }

    virtual_routes {

        0.0.0.0/0 via 5.130.78.1 dev novotelecom metric 75 no_track

    }

}
