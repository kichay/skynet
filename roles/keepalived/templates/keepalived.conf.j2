global_defs {

    path
        enable_script_security
    keepalived_script
        script_user root root

}

vrrp_instance gateway {

    notify_master "/usr/bin/systemctl start isc-dhcp-server"
    notify_backup "/usr/bin/systemctl stop isc-dhcp-server"
    notify_fault "/usr/bin/systemctl stop isc-dhcp-server"
    interface skynet
    virtual_router_id 1

    authentication {

        auth_type PASS
        auth_pass {{ lookup("password", "/tmp/keepalived.pass length=8 chars=ascii_letters") }}

    }

    virtual_ipaddress {

        192.168.128.1/17 dev skynet
        192.168.123.1/24 dev home
        5.130.78.89/24 dev novotelecom

    }

}
