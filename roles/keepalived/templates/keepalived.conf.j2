global_defs {
}

vrrp_instance {{ keepalived["name"] }} {

    state BACKUP
    notify /etc/keepalived/notify.sh
    interface skynet
    virtual_router_id {{ keepalived["id"] }}
    priority 100
    advert_int 1

    authentication {

        auth_type PASS
        auth_pass {{ keepalived["password"] }}

    }

    virtual_ipaddress {

        {{ keepalived["notify"]["skynet"]["address"] }}

    }

}
