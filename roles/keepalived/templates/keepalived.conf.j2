global_defs {

    enable_script_security
    script_user root root

}

vrrp_instance gateway {

    notify_master "/etc/keepalived/bonder.bash master"
    notify_backup "/etc/keepalived/bonder.bash nomaster"
    notify_fault "/etc/keepalived/bonder.bash nomaster"
    notify_stop "/etc/keepalived/bonder.bash nomaster"
    interface skynet
    virtual_router_id 1

    authentication {

        auth_type PASS
        auth_pass skynet

    }

    virtual_ipaddress {

        192.168.128.1/17 dev skynet
        192.168.123.1/24 dev home
        5.130.78.89/24 dev isp1

    }

    virtual_routes {

        0.0.0.0/0 via 5.130.78.1 dev isp1 metric 75

    }

}
