global_defs {

    enable_script_security
    script_user root root
    dynamic_interfaces

}

vrrp_instance gateway {

    notify_master "/bin/bash -c '/usr/bin/systemctl start isc-dhcp-server; /usr/bin/ip link set dev novotelecom address 60:a4:4c:6d:c6:00'"
    notify_backup "/bin/bash -c '/usr/bin/systemctl stop isc-dhcp-server; /usr/bin/ip link set dev novotelecom address de:ad:de:ad:de:ad'"
    notify_fault "/bin/bash -c '/usr/bin/systemctl stop isc-dhcp-server; /usr/bin/ip link set dev novotelecom address de:ad:de:ad:de:ad'"
    notify_stop "/bin/bash -c '/usr/bin/systemctl stop isc-dhcp-server; /usr/bin/ip link set dev novotelecom address de:ad:de:ad:de:ad'"
    interface skynet
    virtual_router_id 1

    authentication {

        auth_type PASS
        auth_pass skynet

    }

    virtual_ipaddress {

        192.168.128.1/17 dev skynet
        192.168.123.1/24 dev home no_track
        5.130.78.89/24 dev novotelecom no_track

    }

    virtual_routes {

        0.0.0.0/0 via 5.130.78.1 dev novotelecom metric 75 no_track

    }

}
