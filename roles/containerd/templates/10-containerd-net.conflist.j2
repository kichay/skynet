{
  "cniVersion": "0.4.0",
  "name": "containerd-net",
  "plugins": [
    {
      "type": "macvlan",
      "master": "podvlan",
      "ipam": {
        "type": "host-local",
        "ranges": [
          [
            {
              "subnet": "{{ networking.ipam.subnet }}/{{ networking.ipam.network }}",
              "rangeStart": "{{ networking.ipam.rangeStart }}",
              "rangeEnd": "{{ networking.ipam.rangeEnd }}",
              "gateway": "{{ networking.ipam.gateway }}"
            }
          ]
        ],
        "routes": [
          {
            "dst": "0.0.0.0/0"
          }
        ]
      }
    },
    {
      "type": "portmap",
      "capabilities": {"portMappings": true}
    },
    {
      "type": "firewall",
	    "backend": "nftables"
	  }
  ]
}
