#!/usr/sbin/nft -f

flush ruleset

table bridge filter {

    chain input {

        type filter hook input priority -200; policy accept;
        oifname novotelecom ip daddr 5.130.78.89 accept
        oifname novotelecom ether type arp arp ptype 0x0800 arp htype 1 arp hlen 6 arp plen 4 arp daddr ip 5.130.78.89 accept
        oifname mts ip daddr 109.174.122.53 accept
        oifname mts ether type arp arp ptype 0x0800 arp htype 1 arp hlen 6 arp plen 4 arp daddr ip 109.174.122.53 accept
        oifname { mts, novotelecom } drop

    }

    chain output {

        type filter hook output priority -200; policy accept;
        iifname novotelecom ip saddr 5.130.78.89 accept
        iifname novotelecom ether type arp arp ptype 0x0800 arp htype 1 arp hlen 6 arp plen 4 arp saddr ip 5.130.78.89 accept
        iifname mts ip saddr 109.174.122.53 accept
        iifname mts ether type arp arp ptype 0x0800 arp htype 1 arp hlen 6 arp plen 4 arp saddr ip 109.174.122.53 accept
        oifname { mts, novotelecom } drop

    }

}

table inet filter {

    chain input {

        type filter hook input priority 0; policy drop;
        ct state { established, related } accept
        iifname { lo, skynet } accept
        iifname home tcp dport 53 accept
        iifname home udp dport 53 accept
        tcp dport ssh accept
        icmp type echo-request accept

    }

    chain forward {

        type filter hook forward priority 0; policy accept;
        ct state established,related accept
        iifname home ether saddr dc:53:60:f1:a4:41 accept
        iifname home oifname skynet ip daddr 192.168.128.14 tcp dport { 80, 443 } accept
        iifname home oifname != { novotelecom, mts } drop

    }

}

table ip nat {

    chain prerouting {

        type nat hook prerouting priority -100; policy accept;
        ct mark { 121, 122 } meta mark set ct mark continue
        ip daddr 5.130.78.89 tcp dport { 80, 443 } ct mark set 121 dnat ip to 192.168.128.14
        ip daddr 109.174.122.53 tcp dport { 80, 443 } ct mark set 122 dnat ip to 192.168.128.14

    }

    chain postrouting {

        type nat hook postrouting priority 100; policy accept;
        oifname { novotelecom, mts } masquerade

    }

}
